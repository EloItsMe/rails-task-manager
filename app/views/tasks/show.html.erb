<div class="container">
  <div class="title-content">
    <% if @task.completed  %>
      <%= image_tag "checked-box.svg" %>
    <% else %>
      <%= image_tag "empty-box.svg" %>
    <% end %>
    <h1><%= @task.title %></h1>
  </div>
  <h3 class="details"><%= @task.details %></h3>
  <div class="btn-container">
    <%= link_to tasks_path, class: "btn" do%>
      <%= image_tag "back.svg" %>
      Back
    <% end %>

    <%= link_to  edit_task_path, class: "btn edit" do%>
      <%= image_tag "edit.svg" %>
    <% end %>
  </div>
</div>
